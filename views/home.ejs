    <div class="modal fade" id="btech">
        <div class="modal-dialog" > <!--model xl,sm,lg-->
            <div class="modal-content mx-auto" style="background-color: aqua;" >
                <div class="modal-header">
                    <h5 class="modal-tittle"> Registration Form</h5>
                    <button type="button" class="btn-close text-white" data-bs-dismiss="modal"></button>
                </div><!--modal-header end-->
                <div class="modal-body">

                    <form action="/courseInsert" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
