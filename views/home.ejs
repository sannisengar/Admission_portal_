                            <input type="date" placeholder=" Enter D.O.B." name="dob" class="form-control">
                        </div>
                        <div class="mb-3">
                            Address
                            <textarea name="address" placeholder="Enter address" class="form-control"></textarea>
                        </div>
                        <div class="mb-3">
                            Gender 
                            <input type="radio" name="gender" class="mr-2" value="Male" >Male
                             <input type="radio" name="gender" value="Female" >Female
                        </div>
                        <div class="mb-5">
                            Qualification
                            <select name="Qualification"   class="form-control">
                                <option>Qualification</option>
                                <option value="12th in Mathematics">12th in Mathematics</option>
                                 <option value="12th+ITI">12th+ITI</option>
                            </select>
                            <div class="mb-5">
                                Course
                                <input type="text" value="btech" class="form-control" name="course" readonly >
                            </div>
                            <div class="mb-3">
                               <center>
                                <button class="btn btn-success btn-lg text-white" type="submit">Sumbit</button>
                               </center>
                            </div>
                        </div>
                    </form>
                    
                </div><!--modal-body end-->
            </div><!--modal content end-->
        </div><!--modal-dialog end-->
    </div>
