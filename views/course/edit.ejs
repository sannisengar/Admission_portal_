<%-include('../layouts/header.ejs') %>

    <br><br><br>
    <div class="content-wrapper" style="margin-bottom: 20px; margin-top: 20px">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container">
                <div class="row mb-2">
                    <div class="col-sm-6 mx-auto">
                       
                            <center>
                                <h1 class="m-0" style="background-color: aqua;">Course Edit
                                </h1>
                            </center>
                      
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <div class="content mt-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 mx-auto">
                        <div class="card">
                            <!-- /.card-header -->
                            <div class="card-body"  style="background-color: aquamarine;">                        
                                <form action="/courseUpdate/<%= d._id %>" method="post" enctype="multipart/form-data">
                                    <div class="mb-3">
                                        Name
                                        <input type="text" name="name" value="<%= d.name%>" placeholder="Enter name"
                                            class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        Email
                                        <input type="email" placeholder="Email" value="<%= d.email%>" name="email"
                                            class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        Phone
                                        <input type="number" placeholder="phone no." value="<%= d.phone%>" name="phone"
                                            class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        D.O.B.
                                        <input type="date" placeholder=" Enter D.O.B." value="<%= d.dob%>" name="dob"
                                            class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        Address
                                        <textarea name="address" placeholder="Enter address" class="form-control">
                                        <%= d.address%>
                                    </textarea>
                                    </div>
                                    <div class="mb-3">
                                        Gender <input type="radio" name="gender" class="mr-2" value="Male" <%= d.gender='Male'?'checked':''%> >Male
                                               <input type="radio" name="gender" value="Female"  <%= d.gender='Female'?'checked':''%> >Female
                                    </div>
                                    <div class="mb-5">
                                        Qualification
                                        <select name="Qualification" class="form-control" >
                                            <option>Qualification</option>
                                            <option  value="12th in Mathematics"  <%= d.Qualification='12th in Mathematics'?'selected':''%>>12th in Mathematics</option>
                                            <option value="12th+ITI"  <%= d.Qualification='12th+ITI'?'selected':''%> >12th+ITI</option> 
                                        </select>
                                        <div class="mb-5">
                                            Course
                                            <input type="text"  value="<%= d.course%>" class="form-control" name="course" readonly>
                                        </div>
                                        <div class="mb-3">
                                            <center>
                                                <button class="btn btn-lg btn-primary text-white " type="submit">Update</button>
                                            </center>
                                        </div>
                                    </div>
                                </form>

                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container -->
        </div>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <%-include('../layouts/footer.ejs') %>